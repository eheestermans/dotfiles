# List in color
alias ls="ls --color"

# List in long format, include dotfiles.
alias l="ls -la"

# List in long format, only directories.
alias ld="ls -ld */"

# Go up directories.
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

if [ "$(uname)" == "Darwin" ]; then
  alias dm="docker-machine"
fi
